@model CloudCantiere.PreventiviInCantiere.Models.HomeViewModels.InterventionViewModel

@{
    ViewData["Title"] = "Intervention";
}

<h2>Intervention</h2>

<h4>InterventionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Intervention" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdType" class="control-label"></label>
                <input asp-for="IdType" class="form-control" />
                <span asp-validation-for="IdType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdType"></label>
                <select class="form-control" asp-for="IdType">
                    <option value="1">Elettricista</option>
                    <option value="2">Muratore</option>
                    <option value="3">Idraulico</option>
                </select>
                <span asp-validation-for="IdType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCantiere" class="control-label"></label>
                <input asp-for="IdCantiere" class="form-control" disabled value="@ViewData["id"]" />
                <span asp-validation-for="IdCantiere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" number class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photos"></label>
                <input type="file" name="files" multiple asp-for="Photos" class="form-control" />
                <span asp-validation-for="Photos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
